<div class="content_container">
  <img  class ="book_cover_pages" src="<%= @book_info.image%>" alt="cover of book">
  <div class="content-book-details">
    <h2 class="details_book_title "> <%= @book_info.title%>: <%= @book_info.subtitle %></h2>
    <p class="details_book_author"> by <%= @book_info.author%></p>

    <form action="" method="POST" class="edit_form">
      
      <label for="reading-status" class="label">READING STATUS</label>
      <select  class="status-select" id="reading-status" value="<%= @current_status %>" name="status">
        <%= html_option(StatusBook::READING, "Reading", @current_status) %>
        <%= html_option(StatusBook::WANT, "Want to read", @current_status) %>
        <%= html_option(StatusBook::READ, "Read", @current_status) %>
      </select>
     
    
      <label for="notes" class="label"> NOTES</label>
      <textarea class="notes-textarea" id="notes" name="notes"> <%= @current_notes%></textarea>

       <button type="submit" class="save-btn">Save</button>
    </form>

  </div>
</div>

